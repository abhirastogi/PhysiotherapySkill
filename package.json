{
  "name": "physiotherapy-skill",
  "version": "1.0.0",
  "description": "An Alexa Skill service with Azure function in TypeScript.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && webpack --config ./tools/build/webpack.js",
    "build:dev": "npm run clean && webpack --config ./tools/build/webpack.prod.js && cp-cli src/local.settings.json dist/local.settings.json",
    "ci:before": "greenkeeper-lockfile-update",
    "ci:after": "greenkeeper-lockfile-upload",
    "lint": "tslint -p ./tsconfig.json --force",
    "test": "jest --coverage --colors",
    "test:ci": "jest --ci --coverage --colors",
    "release": "standard-version"
  },
  "author": "abhirastogi",
  "dependencies": {
    "ask-sdk": "^2.0.7",
    "azure-functions-ts-essentials": "^1.3.2",
    "ts-loader": "^6.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^10.17.14",
    "backend-tslint-rules": "^1.14.0",
    "copy-webpack-plugin": "^5.1.1",
    "cp-cli": "^2.0.0",
    "jest": "^25.1.0",
    "jest-junit-reporter": "^1.1.0",
    "nodemon": "^1.17.5",
    "rimraf": "^3.0.1",
    "ts-jest": "^25.2.0",
    "tslint": "^6.0.0",
    "typescript": "^2.9.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "greenkeeper": {
    "ignore": [
      "awesome-typescript-loader",
      "webpack"
    ]
  }
}
